model User {
  id String @id @default(uuid())

  name           String
  email          String?   @unique
  password       String?
  forgotPassword String?   @unique
  emailVerified  DateTime?
  image          String?
  roles          Role[]
  Account        Account[]
  Session        Session[]
}
